TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Your Telegram user ID(s) â€” comma-separated for multiple admins.
# Get yours by messaging @userinfobot on Telegram.
ADMIN_USER_ID=123456789

# LLM model to use (any OpenRouter-compatible model identifier).
# Default: arcee-ai/trinity-large-preview:free
LLM_MODEL=arcee-ai/trinity-large-preview:free

# Rate limit for non-admin users (messages per hour). Default: 60
#RATE_LIMIT_PER_HOUR=60

# Configurable timezone (e.g. Asia/Tokyo, America/New_York)
# By default, falls back to UTC if empty
#TIMEZONE=UTC

# Rate limit for admin users (messages per hour). Default: 300
#ADMIN_RATE_LIMIT_PER_HOUR=0

# Number of conversation turns to include as context. Default: 20
# MEMORY_TURNS=20

# Webhook HTTP server port. Default: 3000
#WEBHOOK_PORT=3000

# Public base URL for webhook links (shown when creating webhooks).
# Set this to your VPS IP or domain so URLs are correct.
# Must use https:// in production (TLS via reverse proxy).
# WEBHOOK_BASE_URL=https://yourdomain.com

# Set to "false" to disable the webhook server entirely. Default: enabled
#ENABLE_WEBHOOKS=false

# Directory where user-uploaded files are stored on the VPS.
# Each user gets their own sub-folder: <UPLOADS_DIR>/<userId>/
# Defaults to ./uploads (relative to the project root).
#UPLOADS_DIR=/var/rin/uploads

# Maximum single file upload size in MB. Default: 50
#MAX_UPLOAD_MB=50

# Maximum total storage per user in MB. Default: 500
#MAX_USER_QUOTA_MB=500

# Comma-separated list of shell command patterns to block (admin shell access).
# Default: rm -rf /,mkfs,dd if=
#SHELL_DENYLIST=rm -rf /,mkfs,dd if=

# Firebase service account JSON for Firestore database
# Get this from your Firebase project settings > Service accounts
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project-id",...}

# Google OAuth 2.0 credentials for Google services integration
# Get these from Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Base URL for Google OAuth redirect (used in production)
# In development, defaults to http://localhost:3000
#WEBHOOK_BASE_URL=https://yourdomain.com

# Public base URL for Next.js frontend (used by webview)
# In development, defaults to http://localhost:3000
#NEXT_PUBLIC_BASE_URL=https://yourdomain.com
